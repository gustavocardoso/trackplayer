<%= link_to "Add new track", new_track_path, :class => "btn btn-primary" %>

<table class="track-list table table-striped table-hover table-bordered">
  <thead>
    <th>Title</th>
    <th>Artist</th>
    <th>BPM</th>
    <th>Duration</th>
    <th>Obs</th>
    <th class="col-md-2 text-center"></th>
  </thead>
  <tbody>
    <% @tracks.each do |track| %>
      <tr>
        <td><%= link_to track.title, track %></td>
        <td><%= track.artist %></td>
        <td><%= track.bpm %></td>
        <td><%= track.duration %></td>
        <td><%= track.observations %></td>
        <td class="text-center">
          <%= link_to(edit_track_path(track), :class => "btn btn-primary btn-xs btn-edit") do %>
            <span class="glyphicon glyphicon-edit"></span>
            edit
          <% end %>
          <%= link_to(track, method: :delete, data: {confirm: "Are you sure?"}, :class => "btn btn-danger btn-xs") do %>
            <span class="glyphicon glyphicon-remove"></span>
            delete
          <% end %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>